{
  "name": "tsmean",
  "version": "1.0.0",
  "description": "Tutorial Page how to setup the TypeScript-Mean project from scratch",
  "main": "index.js",
  "scripts": {
    "start": "$(npm bin)/ts-node server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "$(npm bin)/watch 'npm run build' --inverval=1",
    "build": "rm -rf dist && mkdir -p dist && cp -r assets dist && npm run mustache",
    "mustache": "$(npm bin)/ts-node compile.ts",
    "roadmap": "tsc roadmap/roadmap.ts --outDir dist/roadmap/ && cp roadmap/roadmap.css dist/roadmap/roadmap.css && cp roadmap/roadmap.html dist/roadmap/roadmap.html",
    "deploy": "./deploy.sh prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bersling/ts-mean.git"
  },
  "keywords": [
    "TypeScript",
    "MEAN"
  ],
  "author": "Daniel Niederberger <bersling@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bersling/ts-mean/issues"
  },
  "homepage": "https://github.com/bersling/ts-mean#readme",
  "devDependencies": {
    "@types/express": "^4.0.36",
    "@types/mustache": "^0.8.30",
    "@types/node": "^8.0.9",
    "@types/serve-static": "^1.7.31",
    "amphtml-validator": "^1.0.20",
    "connect": "^3.6.2",
    "cors": "^2.8.3",
    "express": "^4.15.3",
    "mustache": "^2.3.0",
    "node-sass": "^4.5.3",
    "normalize-scss": "^7.0.0",
    "ts-node": "^3.2.0",
    "typescript": "^2.4.1",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "command-line-args": "^4.0.7",
    "replace": "^0.3.0"
  }
}
